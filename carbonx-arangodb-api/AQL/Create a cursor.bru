meta {
  name: Create a cursor
  type: http
  seq: 1
}

post {
  url: {{host}}/_db/{{databaseName}}/_api/cursor
  body: json
  auth: basic
}

auth:basic {
  username: root
  password: test
}

body:json {
  {
    "query" : "FOR v IN @@vertexCollections FILTER LENGTH( FOR e IN 1..1 INBOUND v GRAPH default RETURN 1 ) > 0 AND LENGTH( FOR e IN 1..1 OUTBOUND v GRAPH default RETURN 1 ) > 0 RETURN v._id",
    "bindVars": 
    {
      "@vertexCollections": "processes"
    },
    "count" : true,
    "batchSize" : 10
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
