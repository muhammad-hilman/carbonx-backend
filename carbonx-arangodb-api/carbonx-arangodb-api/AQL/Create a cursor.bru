meta {
  name: Create a cursor
  type: http
  seq: 1
}

post {
  url: {{host}}/_db/{{databaseName}}/_api/cursor
  body: json
  auth: basic
}

headers {
  username: "root"
  password: "test"
}

auth:basic {
  username: root
  password: test
}

body:json {
  {
    "query" : "FOR product IN products FILTER product._id NOT IN (FOR output IN outputs RETURN output._to) RETURN product",
    "count" : true,
    "batchSize" : 5
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
