meta {
  name: Create a cursor
  type: http
  seq: 1
}

post {
  url: {{host}}/_db/{{databaseName}}/_api/cursor
  body: json
  auth: basic
}

auth:basic {
  username: root
  password: test
}

body:json {
  {
    "query" : "FOR v IN @@collection RETURN v._id",
    "bindVars" :  {
                    "@collection" : "products"
                  },
    "count" : true,
    "batchSize" : 10
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
